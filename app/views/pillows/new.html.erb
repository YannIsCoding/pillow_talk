
<div class="wrapper">
  <div class="form-container">
    <h1>Add a pillow</h1>
    <%= simple_form_for(@pillow) do |f| %>
      <%= f.error_notification %>
     <div class=“form-inputs”>
       <%= f.input :name %>
       <%= f.input :description %>
       <%= f.input :address %>
       <%= f.input :category %>
       <%= f.input :photo %>
       <%= f.input :photo_cache, as: :hidden %>

     </div>
     <div class=“form-actions”>
       <%= f.button :submit, class: 'btn btn-primary' %>
     </div>
    <% end %>
  <%= link_to 'Back' , pillows_path %>
  </div>
</div>

